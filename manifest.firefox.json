{
  "manifest_version": 3,
  "name": "No More Translation",
  "version": "2.0.56",
  "description": "A web browser extension that prevents auto-translation on YouTube (titles, dubbing, video descriptions)",

  "icons": {
    "48": "assets/icons/icon.svg",
    "96": "assets/icons/icon.svg"
  },

  "action": {
    "default_icon": {
      "48": "assets/icons/icon.svg",
      "96": "assets/icons/icon.svg"
    },
    "default_popup": "dist/popup/popup.html",
    "default_title": "NMT"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "*://*.youtube.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["dist/browser-polyfill.js", "dist/content/content.js"]
    }
  ],

  "background": {
    "scripts": ["dist/browser-polyfill.js", "dist/background/background.js"],
    "type": "module"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{9a3104a2-02c2-464c-b069-82344e5ed4ec}",
      "strict_min_version": "109.0"
    }
  },
  
  "web_accessible_resources": [{
      "resources": [
          "dist/content/audioTranslation/audioScript.js",
          "dist/content/descriptionTranslation/descriptionScript.js"
      ],
      "matches": ["*://*.youtube.com/*"]
  }]
}